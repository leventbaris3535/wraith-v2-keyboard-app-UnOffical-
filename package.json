{
  "name": "wraith-app",
  "version": "1.2.1",
  "description": "Unofficial custom wraith app",
  "author": "leventbaris3535",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "build:installer": "electron-builder --win nsis",
    "build:portable": "electron-builder --win portable"
  },
  "dependencies": {
    "express": "^4.18.2",
    "puppeteer": "^21.0.0"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.custom.wraith",
    "productName": "WraithApp",
    "files": [
      "**/*",
      "!node_modules/{.cache,.bin,electron*}/**/*",
      "!**/*.{md,markdown,yml,yaml}"
    ],
    "extraResources": [
      "chromium/**",
      "python/dist/winctl.exe",
      "lang/*",
      "tray-icon.png"
    ],
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icon.ico",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WraithApp"
    }
  }
}
